<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 >
<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Video Name" />
		<EditText
		 android:id="@+id/name"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:layout_marginTop="10px"
		 />
 
</LinearLayout>
<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Video Tags   " />
		<EditText
		 android:id="@+id/tags"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:layout_marginTop="10px"
		 />
 
</LinearLayout>
<LinearLayout android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content" android:paddingTop="20px" android:paddingBottom="20px">
		<TextView 
		    android:id="@+id/timeDate"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Conference Time/Dt"
			/>
			<TextView 
		     android:id="@+id/time"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Set Time"
			android:paddingLeft="30px"
			/>
		<TextView 
		    android:id="@+id/date"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Set Date"
			android:paddingLeft="30px"
			/>
			
</LinearLayout>			


		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
					android:text="Video Description" />
		
		<EditText android:id="@+id/body" android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scrollbars="vertical" android:layout_weight="0.10"/>


<LinearLayout android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content" android:paddingTop="20px" android:paddingBottom="20px">
		
		<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" android:paddingTop="20px">
				<TextView 
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:text="Video Path  "
					/>
				<Button 
					android:text="Browse"
    				android:id="@+id/browse"
    				android:layout_gravity="center_horizontal"
				    android:layout_marginTop="25px"
				    android:layout_width="wrap_content" 
				    android:layout_height="60px"
				    />
		 </LinearLayout>
		 <TextView 
		    android:id="@+id/mb"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="(If Video less than 5 Mb)"
			android:layout_gravity="center_horizontal"
			android:layout_marginLeft="40px"
			/>
</LinearLayout>	



<Button 
	android:text="Submit"
    android:id="@+id/send"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="25px"
    android:layout_width="wrap_content" 
    android:layout_height="60px"
    />
<Button android:text="Back to Home" android:layout_gravity="center_horizontal" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
<TextView
 android:id="@+id/textin"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:layout_marginTop="35px"
 />

</LinearLayout>

